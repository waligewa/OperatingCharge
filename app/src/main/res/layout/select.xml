<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#013933" >

        <TextView
            android:id="@+id/ic_a_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="预约"
            android:textColor="#ffffff"
            android:textSize="17sp"/>

    </RelativeLayout>

    <!--底下的两个tab-->
    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_40dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/haircut1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:checked="true"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/ll_bg2"
            android:button="@null"
            android:gravity="center"
            android:padding="3dp"
            android:text="理发师1"
            android:textColor="@drawable/selector_tab_text_color"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/haircut2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/ll_bg2"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="理发师2"
            android:textColor="@drawable/selector_tab_text_color"
            android:textSize="12sp" />

    </RadioGroup>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:overScrollMode="never"
        android:scrollbars="none"/>

    <TextView
        android:id="@+id/submit"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/selecter_btn"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text="提交"
        android:textColor="#ffffff"
        android:textColorHint="#bbffffff"
        android:textSize="@dimen/value_14sp" />

</LinearLayout>